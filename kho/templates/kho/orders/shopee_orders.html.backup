<!-- JS: G·ª¨I Y√äU C·∫¶U T√åM SHIP -->
<script>
    function timShip(mp_order_id) {
        if (!mp_order_id) return;

        const url = `/kho/orders/print_now/?ids=${mp_order_id}&print=no`;

        fetch(url, { method: "GET" })
            .then(res => res.json())
            .then(data => {
                if (data.status === "ok") {
                    alert("ƒê√£ g·ª≠i y√™u c·∫ßu t√¨m ship th√†nh c√¥ng!");
                    location.reload();
                } else {
                    let msg = "Kh√¥ng r√µ l·ªói";

                    if (Array.isArray(data.errors) && data.errors.length > 0) {
                        const firstErr = data.errors[0];
                        msg = firstErr.error || `ƒê∆°n ${firstErr.channel_order_number || ""} l·ªói`;
                    } else if (data.message) {
                        msg = data.message;
                    }
                    alert("G·ª≠i y√™u c·∫ßu th·∫•t b·∫°i: " + msg);
                }
            })
            .catch(err => {
                alert("L·ªói h·ªá th·ªëng.");
                console.error(err);
            });
    }
</script>

<!-- JS: IN ƒê∆†N L·∫∫ -->
<script>
