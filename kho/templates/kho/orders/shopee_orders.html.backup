<script>
    document.addEventListener('DOMContentLoaded', function () {
        const panel = document.getElementById('side-panel');

        if (!panel) return;

        function pinSidePanel() {
            // Ch·ªâ √°p d·ª•ng tr√™n m√†n h√¨nh >= 1024px (lg)
            if (window.innerWidth < 1024) {
                panel.style.position = '';
                panel.style.top = '';
                panel.style.left = '';
                panel.style.width = '';
                return;
            }

            // L·∫•y v·ªã tr√≠ ban ƒë·∫ßu c·ªßa panel trong layout
            const rect = panel.getBoundingClientRect();

            // ƒê·∫∑t l·∫°i ƒë·ªÉ n√≥ c·ªë ƒë·ªãnh ƒë√∫ng ch·ªó ƒë√≥
            panel.style.position = 'fixed';
            panel.style.top = rect.top + 'px';
            panel.style.left = rect.left + 'px';
            panel.style.width = rect.width + 'px';
        }

        // Pin ngay khi load xong
        pinSidePanel();

        // N·∫øu resize c·ª≠a s·ªï th√¨ t√≠nh l·∫°i (tr√°nh l·ªách v·ªã tr√≠)
        window.addEventListener('resize', function () {
            // Xo√° style ƒë·ªÉ l·∫•y rect m·ªõi r·ªìi pin l·∫°i
            panel.style.position = '';
            panel.style.top = '';
            panel.style.left = '';
            panel.style.width = '';
            pinSidePanel();
        });
    });
</script>

