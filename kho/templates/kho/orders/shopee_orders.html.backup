        const win = window.open(url);
        if (win) {
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        }
    }
</script>

<!-- JS: L·ªåC ƒê∆†N H√ÄNG -->
<script>
    function filterOrders() {
        const input = document.getElementById('order-search-input');
        if (!input) return;

        const q = (input.value || '').trim().toLowerCase();
        const rows = document.querySelectorAll('.js-order-row');

        if (!rows.length) return;

        if (!q) {
            rows.forEach(row => row.classList.remove('hidden'));
            return;
        }

        rows.forEach(row => {
            const text = (row.innerText || '').toLowerCase();
            if (text.includes(q)) {
                row.classList.remove('hidden');
            } else {
                row.classList.add('hidden');
            }
        });
    }
</script>

<!-- JS: QU·∫¢N L√ù CHECKBOX + T·∫†O PHI·∫æU ƒê√É CH·ªåN -->
<script>
    let selectedOrderIds = new Set();

    function updateBulkPanel() {
        const btn = document.getElementById('btn-tao-phieu');
        const countSpan = document.getElementById('selected-count');
        const hasSelected = selectedOrderIds.size > 0;

        if (countSpan) {
            countSpan.textContent = hasSelected ? selectedOrderIds.size : 0;
        }

        if (!btn) return;

        if (hasSelected) {
            btn.disabled = false;
            btn.classList.remove('bg-slate-100', 'text-slate-400', 'border-slate-200', 'cursor-not-allowed');
            btn.classList.add('bg-orange-500', 'hover:bg-orange-600', 'text-white', 'border-orange-500', 'cursor-pointer');
        } else {
            btn.disabled = true;
            btn.classList.add('bg-slate-100', 'text-slate-400', 'border-slate-200', 'cursor-not-allowed');
            btn.classList.remove('bg-orange-500', 'hover:bg-orange-600', 'text-white', 'border-orange-500', 'cursor-pointer');
        }
    }

    function taoPhieuDaChon() {
        if (!selectedOrderIds.size) return;

        const idsParam = Array.from(selectedOrderIds).join(',');
        const url = `/kho/orders/print_now/?ids=${encodeURIComponent(idsParam)}&print=yes`;

        const win = window.open(url, '_blank');

        if (!win) {
            alert('Tr√¨nh duy·ªát ƒëang ch·∫∑n c·ª≠a s·ªï b·∫≠t l√™n, vui l√≤ng cho ph√©p popup ƒë·ªÉ in phi·∫øu.');
        } else {
            // Reload sau khi m·ªü popup in
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        const selectAllCb = document.getElementById('select-all-checkbox');
        const orderCheckboxes = document.querySelectorAll('.order-checkbox');

        // Helper: checkbox thu·ªôc m·ªôt d√≤ng ƒëang hi·ªÉn th·ªã (kh√¥ng b·ªã filter ·∫©n)
        function isVisibleCheckbox(cb) {
            const row = cb.closest('.js-order-row');
            return row && !row.classList.contains('hidden');
        }

        // Kh·ªüi t·∫°o selectedOrderIds n·∫øu c√≥ √¥ n√†o ƒëang ƒë∆∞·ª£c check s·∫µn
        orderCheckboxes.forEach(cb => {
            const orderId = cb.dataset.orderId;
            if (!orderId) return;

            if (cb.checked) {
                selectedOrderIds.add(orderId);
            }

            cb.addEventListener('change', function () {
                if (this.checked) {
                    selectedOrderIds.add(orderId);
                } else {
                    selectedOrderIds.delete(orderId);
                }
                updateBulkPanel();
                syncSelectAllState();
            });
        });

        // H√†m ƒë·ªìng b·ªô tr·∫°ng th√°i checkbox "ch·ªçn t·∫•t c·∫£"
        function syncSelectAllState() {
            if (!selectAllCb) return;

            let totalVisible = 0;
            let checkedVisible = 0;

            orderCheckboxes.forEach(cb => {
                if (!isVisibleCheckbox(cb)) return;  // ch·ªâ t√≠nh c√°c d√≤ng ƒëang hi·ªÉn th·ªã

                totalVisible++;
                if (cb.checked) {
                    checkedVisible++;
                }
            });

            selectAllCb.checked = (checkedVisible === totalVisible && totalVisible > 0);
            selectAllCb.indeterminate = (checkedVisible > 0 && checkedVisible < totalVisible);
        }

        // S·ª± ki·ªán cho checkbox "ch·ªçn t·∫•t c·∫£"
        if (selectAllCb) {
            selectAllCb.addEventListener('change', function () {
                const checked = selectAllCb.checked;

                orderCheckboxes.forEach(cb => {
                    const orderId = cb.dataset.orderId;
                    if (!orderId) return;
                    if (!isVisibleCheckbox(cb)) return;  // CH·ªà t√°c ƒë·ªông l√™n ƒë∆°n ƒëang hi·ªÉn th·ªã

                    cb.checked = checked;

                    if (checked) {
                        selectedOrderIds.add(orderId);
                    } else {
                        selectedOrderIds.delete(orderId);
                    }
                });

                updateBulkPanel();
                syncSelectAllState();
            });
        }

        // N·∫øu c√≥ s·∫µn ?q= tr√™n URL th√¨ t·ª± filter l·∫°i sau khi load
        const input = document.getElementById('order-search-input');
        if (input && (input.value || '').trim() !== '') {
            filterOrders();
        }

        // C·∫≠p nh·∫≠t panel l·∫ßn ƒë·∫ßu
        updateBulkPanel();
